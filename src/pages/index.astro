---
    import Layout from '../layouts/Layout.astro';
    import Card from '../components/Card.astro';
    import values from '../vegetable-values.json';
    import { getUserSeason } from '../lib/getUserSeason';
    import { Header } from '../components/Header';

    const userSeason = getUserSeason();
---

<Layout title="AstroFoodie">
    <main>
        <h1>Welcome to <span class="text-gradient">AstroFoodie</span></h1>

        <Header 
            client:load
            className={`instructions ${userSeason}`}
            title={`${userSeason} vegetables and fruits in`}
            body={values[userSeason]}
        />

        <ul role="list" class="link-card-grid">
            <Card className={`${userSeason === 'Summer' ? 'link-card active' : 'link-card' }`} href="/recipes/summer"
                title="🏖 Summer" body="Best recipes for this time of the year." />
            <Card className={`${userSeason === 'Spring' ? 'link-card active' : 'link-card' }`} href="/recipes/spring"
                title="🌼 Spring" body="Best recipes for this time of the year." />
            <Card className={`${userSeason === 'Autumn' ? 'link-card active' : 'link-card' }`} href="/recipes/autumn"
                title="🍂 Autumn" body="Best recipes for this time of the year." />
            <Card className={`${userSeason === 'Winter' ? 'link-card active' : 'link-card' }`} href="/recipes/winter"
                title="❄️ Winter" body="Best recipes for this time of the year." />
        </ul>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1.5rem;
        max-width: 70ch;
    }

    h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
    }

    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    .instructions {
        line-height: 1.6;
        margin: 1rem 0;
        border: 1px solid rgba(var(--accent), 25%);
        background-color: white;
        padding: 1rem;
        border-radius: 0.4rem;
    }

    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
        padding: 0;
    }
    .navbar {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
    }
</style>